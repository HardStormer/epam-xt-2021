@using GMD.THREE_LAYER.Dependecies;
@using GMD.THREE_LAYER.Entities;
@{
    Layout = "~/Pages/Layout/_BasicLayout.cshtml";

    var awardBll = DependencyResolver.Instance.awardsLogic;

    if (IsPost)
    {
        if (Request.Form["awardSelect"] != "null")
        {
            awardBll.Delete(Guid.Parse(Request.Form["awardSelect"]));
            <div class="alert alert-success" role="alert">
                Successefully deleted!
            </div>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                Some of intputs are empty!
            </div>
        }

    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="wrapper">
        <div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="~/Pages/RedactorPages/AddUser.cshtml">Add user</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Pages/RedactorPages/AddAward.cshtml">Add award</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Pages/RedactorPages/DeleteUser.cshtml">Delete user</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="~/Pages/RedactorPages/DeleteAward.cshtml">Delete award</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="~/Pages/RedactorPages/AddAwardToUser.cshtml">Add award to user</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="~/Pages/RedactorPages/DeleteAwardFromUser.cshtml">Delete award from user</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="~/Pages/RedactorPages/EditUser.cshtml">Edit user</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="~/Pages/RedactorPages/EditAward.cshtml">Edit award</a>
                </li>
            </ul>
        </div>
        <div>
            <form method="post">
                <fieldset>
                    <legend>Delete award</legend>

                    <div class="input-group mb-3">

                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">Choose award to delete</label>
                        </div>
                        <select class="custom-select" name="awardSelect">
                            <option selected value="null">Nothing</option>
                            @foreach (var award in awardBll.GetAll())
                            {
                                <option value="@award.ID">@award.Title</option>
                            }
                        </select>

                    </div>

                    <input type="submit" class="btn btn-light" value="Submit" />
                </fieldset>
            </form>
        </div>
    </div>
</body>
</html>
